<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="DataText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="android:padding">@dimen/size_8</item>
        <item name="android:layout_margin">@dimen/size_16</item>
    </style>

    <style name="DeleteButton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/terra_cotta</item>
    </style>

    <style name="EditButton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/crayola_orange_yellow</item>
    </style>

    <style name="DoneButton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/eaton_blue</item>
    </style>

</resources>